generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiKey {
  id              String   @id @default(cuid())
  api_key         String   @unique
  owner_sol       String   // solana address that receives payments for this API key / model
  rate_per_request Int     // rate in lamports (1 SOL = 1e9 lamports). store lamports for precision
  ai_model        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}